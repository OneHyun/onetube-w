extends ./base

block content
    div#videoContainer(data-id=video._id)
        div.videoBox
            video(src="/" + video.fileUrl, draggable=false)
        div#videoControls.videoControls
            input(type="range", step="1", value=0, min="0")#timeline.videoControls__timeline
            
            div.videoControls__play
                span#play.videoControls_playBtn
                    i.fas.fa-play
            div.videoControls__time
                span#currentTime 00:00
                span  / 
                span#totalTime 00:00
            
            div.videoControls__volume
                span#mute
                    i.fas.fa-volume-up
                input(type="range", step="0.1", value=0.5, min="0", max="1")#volume
            div.videoControls__screen
                span#fullScreen
                    i.fas.fa-expand
    //-
        div
            p=video.description
            small=uploadedTime
            h5 #{video.meta.views} #{video.meta.views <= 1 ? "view" : "views"}
        div
            small Uploaded by 
                a(href=`/users/${video.owner._id}`) #{video.owner.name}
        if loggedInUser && (String(video.owner._id) === String(loggedInUser._id))
            a(href=`${video.id}/edit`) Edit Video &larr;
            br
            a(href=`${video.id}/delete`) Delete Video &larr;

block scripts 
    script(src="/static/js/videoPlayer.js")