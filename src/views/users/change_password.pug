extends ../base

block content
    if errorMessage
        span=errorMessage
    form(method="post")
        input(name="oldPassword", placeholder="현재 비밀번호", type="password")
        input(name="newPassword", placeholder="새 비밀번호", type="password")
        input(name="newPasswordConfirm", placeholder="새 비밀번호 확인", type="password")
        input(value="비밀번호 수정", type="submit")