extends ../base

block content
    form(method="POST", enctype="multipart/form-data").edit-profile__form
        label(for="avatar")
             img(src="/" + loggedInUser.avatarUrl, width="100", height="100")
        input(type="file", id="avatar", name="avatar", accept=".png, .jpg, .jepg")
        input(name="name", placeholder="Name", type="text", value=loggedInUser.name, required)
        input(name="username", placeholder="UserName", type="text", value=loggedInUser.username, required)
        input(name="location", placeholder="Location", type="text", value=loggedInUser.location, required)
        input(type="submit", value="Update Profile")

        if !loggedInUser.createdSocialLogin
            hr
            div.edit-profile__password
                a(href="change_password") Change Password &larr;