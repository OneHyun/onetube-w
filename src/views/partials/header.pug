header
    a(href="/").header__logo
        i.fas.fa-dragon

    form(method="GET", action="/search").search__form
        input(placeholder="Search by title",name="keyword", type="text")
        button
            i.fas.fa-search
    nav
        ul
            
            if loggedIn
                li
                    a(href="/videos/upload") Upload Video
                li
                    a(href="/users/edit") Edit Profile
                li
                    a(href=`/users/${loggedInUser._id}`) My Profile
                li
                    a(href="/users/logout") Log Out
            else
                li
                    a(href="/login") Login
                li 
                    a(href="/join").header__btn Join