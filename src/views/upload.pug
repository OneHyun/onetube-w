extends ./base

block content
    div.upload__container
        div.upload__video
            video#preview
            button#actionBtn.social__btn Start Recording
        if errorMessage
            span=errorMessage
        form(method="POST", enctype="multipart/form-data")
            label(for="video") Video File
            input(name="video", type="file", accept="video/*", required, id="video")
            label(for="thumb") Thumbnail File
            input(name="thumb", type="file", accept="image/*", required, id="thumb")
            input(name="title", placeholder="Title", type="text", required, minlength=5, maxlength=40)
            input(name="description", placeholder="Description", type="text", required, minlength=5)
            input(name="hashtags", placeholder="Hashtags, separated by comma.", type="text" required)
            input(type="submit", value="Upload Video")

block scripts 
    script(src="/static/js/videoRecorder.js")