extends ./base

block content
    if errorMessage
        span=errorMessage
    form(method="POST", enctype="multipart/form-data")
        label(for="video") Video File
        input(name="video", type="file", accept="video/*", required, id="video")
        input(name="title", placeholder="Title", type="text", required, minlength=5, maxlength=40)
        input(name="description", placeholder="Description", type="text", required, minlength=10)
        input(name="hashtags", placeholder="Hashtags, separated by comma.", type="text" required)
        input(type="submit", value="Upload Video")